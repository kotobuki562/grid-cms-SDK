{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.(spec|test).(ts|tsx|js)",
    "test/**/*.(spec|test).(ts|tsx|js)"
  ]
}
